{
  "name": "Object classes to tags",
  "type": "app",
  "categories": [
    "images",
    "annotation transformation",
    "data operations"
  ],
  "description": "Convert each class name to tag associated with objects, and merge existing classes into single one",
  "docker_image": "supervisely/base-py-sdk:6.17.4",
  "main_script": "src/main.py",
  "modal_template": "src/modal.html",
  "modal_template_state": {
    "resultClassName": "object"
  },
  "modal_template_data": {
    "resultClassName": {
      "description": "Name of single class for objects in new project."
    },
    "resultProjectName": {
      "description": "Optional. If not set it will be named like \"original_project Tagged\"."
    }
  },
  "task_location": "workspace_tasks",
  "icon": "https://github.com/supervisely-ecosystem/object-class-to-tag/releases/download/v0.1.0/app-icon.png",
  "icon_background": "#FFFFFF",
  "headless": true,
  "context_menu": {
    "target": [
      "images_project"
    ]
  },
  "poster": "https://github.com/supervisely-ecosystem/object-class-to-tag/releases/download/v0.1.0/app-poster.png?v=2"
}